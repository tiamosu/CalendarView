<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".MainActivity">

    <com.tiamosu.calendarview.CalendarLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:calendar_content_view_id="@id/main_nsv"
        app:calendar_show_mode="both_month_week_view"
        app:default_status="expand">

        <com.tiamosu.calendarview.CalendarView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:calendar_height="58dp"
            app:calendar_match_parent="false"
            app:current_day_lunar_text_color="@color/colorPrimaryDark"
            app:current_day_text_color="@color/colorPrimaryDark"
            app:current_month_lunar_text_color="@android:color/white"
            app:current_month_text_color="@android:color/white"
            app:day_text_size="15sp"
            app:lunar_text_size="9sp"
            app:lunar_text_visible="true"
            app:month_view_show_mode="mode_all"
            app:other_month_lunar_text_color="#80ffffff"
            app:other_month_text_color="#80ffffff"
            app:selected_lunar_text_color="@android:color/white"
            app:selected_text_color="@android:color/white"
            app:selected_theme_color="@android:color/holo_red_light"
            app:selected_theme_radius="50dp"
            app:week_background="@color/colorAccent"
            app:week_line_background="@color/colorPrimary"
            app:week_text_color="@android:color/white"
            app:week_text_size="18sp" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/main_nsv"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.core.widget.NestedScrollView>
    </com.tiamosu.calendarview.CalendarLayout>
</FrameLayout>